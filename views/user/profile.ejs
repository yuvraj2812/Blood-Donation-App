<%- include('../blocks/userheader') %>

<section class="section about-me" data-section="section1">
    <div class="container">
      <div class="section-heading">
        <h2>User Profile</h2>
       <div class="line-dec"></div>
       </div>

       <form id="contact" action="/user/uploadpic"
        method="post" enctype="multipart/form-data">
        <div class="row">
          <div class="col-md-12">
            <fieldset>
              <input
                name="mypic"
                type="file"
                class="form-control"
                id="mypic"
                required
              />
            </fieldset>
          </div>
          <div class="col-md-12">
            <fieldset>
              <button type="submit" id="form-submit" class="button">
                Send Image
              </button>
            </fieldset>
          </div>
        </div>
      </form>

    </div>
</section>       

<%- include('../blocks/footer') %>